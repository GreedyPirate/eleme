// 解决移动端1像素问题
border-1px($color)
	position:relative
	&:after
		position:absolute
		bottom:0
		left:0
		content:''
		display:block
		width:100%
		border-top:1px solid $color

// 去除1px边框
border-none()
	&:after
		display none
	
// 自动适配2倍，3倍图片	
bg-img($url)
	background-image:url($url + "@2x.png")
	@media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
		background-image: url($url + "@3x.png")